{
  "name": "caster",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "run-p client:watch server:run css:watch",
    "start:prod": "run-s client:build server:run",
    "client:watch": "parcel watch index.html --cache-dir .parcel-cache --dist-dir ./public --public-url /public",
    "client:build": "parcel build index.html --cache-dir .parcel-cache --dist-dir ./public --public-url /public",
    "server:run": "npm run ts:run app/server/index.ts",
    "css:watch": "tcm -p app/**/*.pcss --watch",
    "lint": "eslint . --ext .ts --ext .tsx",
    "lint:fix": "eslint . --ext .ts --ext .tsx --fix",
    "ts:check": "tsc --noEmit",
    "ts:run": "ts-node-dev --transpile-only -r tsconfig-paths/register"
  },
  "alias": {
    "client": "./app/client",
    "server": "./app/server",
    "shared": "./app/shared"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/classnames": "^2.3.1",
    "@types/koa": "^2.13.4",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-static": "^4.0.2",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/parser": "^5.2.0",
    "autoprefixer": "^10.4.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-typescript": "^0.14.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typed-css-modules": "^0.7.0",
    "typescript": "^4.4.4"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "classnames": "^2.3.1",
    "koa": "^2.13.4",
    "koa-compose": "^4.1.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
