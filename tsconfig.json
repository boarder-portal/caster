{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "client/*": ["./app/client/*"],
      "server/*": ["./app/rtmp-server/*"],
      "shared/*": ["./app/shared/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "app/shared/typings",
      "app/client/typings",
      "app/server/typings"
    ],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules/**",
    "media/**",
    "app/deno-server/**"
  ]
}
