.root {
  composes: center from '../../styles/common.pcss';

  position: relative;
  cursor: pointer;
  user-select: none;
}

.bar {
  width: 100%;
  height: 2px;
  background-color: var(--primaryMainColorTransparent);

  .activeBar {
    height: 100%;
    background-color: var(--primaryMainColor);
  }
}

.circle {
  position: absolute;
  top: 0;
  left: 0;
  aspect-ratio: 1 / 1;
  height: 100%;
  border-radius: 50%;
  background-color: var(--primaryMainColor);
}
