.root {
  aspect-ratio: 1 / 1;
}

.arc {
  stroke: var(--primaryMainColor);
  stroke-width: 2;
  stroke-dasharray: 48;
  stroke-linecap: round;
  fill: none;
  animation: rotation infinite 2s linear;
}

@keyframes rotation {
  0% {
    stroke-dashoffset: 96;
  }

  100% {
    stroke-dashoffset: 0;
  }
}
